<div class="container text-center">
	<h1 class="mt-4 text-light display-1">Current blog users:</h1>
	<div class="flickr_pagination">
		<%= will_paginate @users, :container => false %>
	</div>
	<% @users.each do |user|%>
		<div class="card w-100 text-light shadow">
			<div class="card-body">
				<div class="card-header">
					<h5 class="card-title display-6"><%= link_to user.username, user_path(user), class: "article-link text-decoration-none"%></h5>
				</div>
				<%= link_to gravatar_for(user, size: 200), user_path(user)%>
				<p class="articles-count mt-3"><%= pluralize(user.articles.count, "article")%></p>
				<div class="btn-group">
					<%= button_to "View profile", user_path(user), method: :get, class: "btn btn-outline-primary"%>
					<%= button_to "Edit profile", edit_user_path(user), method: :get, class: "btn btn-outline-primary"%>
				</div>
				<div class="card-footer text-muted">
					<small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
				</div>
			</div>
		</div>
	<%end%>
	<div class="flickr_pagination mb-4">
		<%= will_paginate @users, :container => false %>
	</div>
</div>