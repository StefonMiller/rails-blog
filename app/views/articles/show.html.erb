<div class="container">
	<h1 class="mt-4 text-light display-1 text-center"><%= @article.title %></h1>
	<div class="card w-100 text-light shadow">
		<div class="card-body">
			<div class="card-header">
				<%= link_to gravatar_for(@article.user), user_path(@article.user)%>
				<p class="fst-italic text-center mt-4">Created by <%= @article.user.username %></p>
			</div>
			<div class="card-text text-left"><%=truncate(simple_format(@article.description), length: 250)=%></div>
			<div class="btn-group d-flex justify-content-center">
				<%= button_to "View", article_path(@article), method: :get, class: "btn btn-outline-primary"%>
				<%= button_to "Edit", edit_article_path(@article), method: :get, class: "btn btn-outline-primary"%>
				<%= button_to "Delete", article_path(@article), method: :delete, form: {data: {turbo_confirm: "Are you sure?"}}, class: "btn btn-outline-primary"%>
			</div>
			<div class="card-footer text-muted text-center">
				<small>Created <%= time_ago_in_words(@article.created_at) %> ago, last updated <%= time_ago_in_words(@article.updated_at) %> ago</small>
			</div>
		</div>
	</div>
	<h5 class="card-title display-6 text-center"><%= link_to "Return to articles page", articles_path, class: "return-link text-decoration-none"%></h5>
</div>



