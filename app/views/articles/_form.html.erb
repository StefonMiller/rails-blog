<%= form_with(model: @article, local: true, :html => {:class => 'info-form text-center'}) do |f|%>
	<div class = "form-group row">
		<%= f.label :title, class: "col-2 col-form-label"%>
		<div class="col-10">
			<%= f.text_field :title, class: "form-control"%>
		</div>
	</div>
	<div class = "form-group row">
		<%= f.label :description, class: "col-2 col-form-label"%>
		<div class="col-10">
			<%= f.text_area :description, rows: 10, class: "form-control"%>
		</div>
	</div>
	<%= f.submit class: "btn btn-outline-primary create-button"%>
<% end %>