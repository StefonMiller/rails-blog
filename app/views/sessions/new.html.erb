<div class="container text-light">
	<h1 class="mt-4 display-1 text-center">Log in</h1>
	<%= form_with(scope: :session, url: login_path, :html => {:class => 'info-form text-center'}) do |f|%>
	<div class = "form-group row">
		<%= f.label :email, class: "col-2 col-form-label"%>
		<div class="col-10">
			<%= f.email_field :email, class: "form-control"%>
		</div>
	</div>
	<div class = "form-group row">
		<%= f.label :password, class: "col-2 col-form-label"%>
		<div class="col-10">
			<%= f.password_field :password, class: "form-control"%>
		</div>
	</div>
	<%= f.submit class: "btn btn-outline-primary create-button"%>
<% end %>
</div>
